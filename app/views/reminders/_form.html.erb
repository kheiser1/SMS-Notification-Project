<%= form_for [@user, @reminder] do |f| %>
 
  <% if @reminder.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@reminder.errors.count, "error") %> prohibited
        this reminder from being saved:
      </h2>
      <ul>
        <% @reminder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title, 'Title your reminder' %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :date, 'Enter a date' %>
    <%= f.date_field :date %>
  </p>
  
   <p>
    <%= f.label :time, 'Set a time' %>
    <%= f.time_field :time %>
  </p>
 
  <p>
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>