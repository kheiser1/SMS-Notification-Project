<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
<% if @errors %>
	<ul>
	<% @errors.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
<% end %>

  <p>
    <%= f.label :name, 'Name: ' %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email, 'Email: ' %>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :phone, 'Phone: ' %>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :password, 'Password: ' %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, 'Password Confirmation: ' %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
 
<% end %>